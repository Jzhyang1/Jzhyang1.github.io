---
import background from '../assets/background.svg';

const images = import.meta.glob('/public/artworks/*.{jpg,jpeg,png,gif,JPG,JPEG,PNG,GIF}', { eager: true });
const imagePaths = Object.keys(images).map((path) => path.replace('/public', ''));
---

<div class="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
    <div class="carousel" id="carousel">
        {imagePaths.map((path) => (
            <img src={path} alt="Artwork" />
        ))}
    </div>
    <div class="carousel-buttons">
        <button class="carousel-button" id="carousel-prev">Prev</button>
        <button class="carousel-button" id="carousel-next">Next</button>
    </div>
</div>


<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(15px);
	}

    .container {
        display: flex;
        flex: 1;
    }

    .carousel {
        display: flex;
        overflow: hidden;
        width: 100%;
        position: relative;
    }

    .carousel img {
        width: 100%;
        height: 100%;
        max-width: 100vw;
        max-height: 100vh;
        object-fit: contain;
        flex-shrink: 0;
        transition: transform 0.5s ease;
    }

    .carousel-buttons {
        position: absolute;
        top: 50%;
        left: 0px;
        width: 100%;
        display: flex;
        justify-content: space-between;
        transform: translateY(-50%);
    }

    .carousel-button {
        background: rgba(0, 0, 0, 0.5);
        border: none;
        color: white;
        padding: 10px;
        cursor: pointer;
    }
</style>

<script>
    const carousel = document.getElementById('carousel');
    const images = carousel?.querySelectorAll('img');
    let index = 0;

    document.getElementById('carousel-prev')?.addEventListener('click', () => {
        if (!images) return;
        index = (index > 0) ? index - 1 : images.length - 1;
        updateCarousel();
    });

    document.getElementById('carousel-next')?.addEventListener('click', () => {
        if (!images) return;
        index = (index < images.length - 1) ? index + 1 : 0;
        updateCarousel();
    });

    function updateCarousel() {
        const offset = -index * 100;
        images?.forEach((img) => {
            img.style.transform = `translateX(${offset}%)`;
        });
    }
</script>